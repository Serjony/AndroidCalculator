<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:id="@+id/operation"
        android:textColor="@android:color/white"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="40sp"
        android:singleLine="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:id="@+id/result"
        android:textColor="@android:color/white"
        android:gravity="end"
        android:ellipsize="start"
        android:textSize="40sp"
        android:singleLine="true"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                style="@style/ActionBtns"
                android:id="@+id/btn_AC"
                android:text="AC"
                />
            <TextView
                style="@style/ActionBtns"
                android:id="@+id/btn_leftPar"
                android:text="("
                />
            <TextView
                style="@style/ActionBtns"
                android:id="@+id/btn_rightPar"
                android:text=")"
                />
            <TextView
                style="@style/ActionBtns"
                android:id="@+id/btn_div"
                android:text="/"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                style="@style/NumberBtns"
                android:id="@+id/btn_7"
                android:text="7"
                />
            <TextView
                style="@style/NumberBtns"
                android:id="@+id/btn_8"
                android:text="8"
                />
            <TextView
                style="@style/NumberBtns"
                android:id="@+id/btn_9"
                android:text="9"
                />
            <TextView
                style="@style/ActionBtns"
                android:id="@+id/btn_multip"
                android:text="*"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                style="@style/NumberBtns"
                android:id="@+id/btn_4"
                android:text="4"
                />
            <TextView
                style="@style/NumberBtns"
                android:id="@+id/btn_5"
                android:text="5"
                />
            <TextView
                style="@style/NumberBtns"
                android:id="@+id/btn_6"
                android:text="6"
                />
            <TextView
                style="@style/ActionBtns"
                android:id="@+id/btn_plus"
                android:text="+"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                style="@style/NumberBtns"
                android:id="@+id/btn_1"
                android:text="1"
                />
            <TextView
                style="@style/NumberBtns"
                android:id="@+id/btn_2"
                android:text="2"
                />
            <TextView
                style="@style/NumberBtns"
                android:id="@+id/btn_3"
                android:text="3"
                />
            <TextView
                style="@style/ActionBtns"
                android:id="@+id/btn_minus"
                android:text="-"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                style="@style/NumberBtns"
                android:id="@+id/btn_dot"
                android:text="."
                />
            <TextView
                style="@style/NumberBtns"
                android:id="@+id/btn_0"
                android:text="0"
                />
            <TextView
                style="@style/NumberBtns"
                android:id="@+id/btn_back"
                android:text="Back"
                />
            <TextView
                style="@style/ActionBtns"
                android:id="@+id/btn_equal"
                android:text="="
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>